

<div class="container m-3">
  <h1>My Tasks</h1>
  <p><% @tasks.each do |task| %></p>
  <input type="checkbox" name="task" id="task" <%= 'checked' if task.completed %>>
  <label for="task" class="checkbox_label mx-3"><%= link_to task.title, task_path(task) %></label>
   &middot;   <%= link_to "Delete",
              task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?"}  %>

  <% end %>
  <br>
  <hr>
  <div class="link">
  <%= link_to "New Task", new_task_path %>
  </div>
</div>
